<!DOCTYPE html>
<html>
  <head>
    <title>RailsWebStarter</title>
    <%= csrf_meta_tags %>

    <script type="text/javascript">
      var AppConfig = {
        auth0_client_id: '<%= ENV.fetch('AUTH0_CLIENT_ID', nil) %>',
        auth0_domain: '<%= ENV.fetch('AUTH0_DOMAIN', nil) %>',
        auth0_redirect_url: '<%= auth_auth0_callback_url %>',
      };
    </script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>

    <script src="https://cdn.auth0.com/js/lock/11.3/lock.min.js"></script>
  </body>
</html>
